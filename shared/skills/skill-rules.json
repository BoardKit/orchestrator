{
  "version": "1.0",
  "skills": {
    "global/skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "scope": "all",
      "filePatterns": [
        "**/.claude/skills/**"
      ],
      "keywords": [
        "skill",
        "skill-rules.json"
      ],
      "promptTriggers": {
        "keywords": [
          "create skill",
          "new skill",
          "skill trigger",
          "how do skills work",
          "skill activation"
        ],
        "intentPatterns": [
          "how (do|does) .*skill.*work",
          "create.*skill",
          "add.*skill",
          "skill.*system"
        ]
      }
    },
    "orchestrator/orchestrator": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "scope": "orchestrator",
      "alwaysActive": true,
      "filePatterns": [
        "**/shared/agents/**/*.md",
        "**/shared/skills/**/*.md",
        "**/shared/guidelines/**/*.md",
        "**/shared/hooks/**/*.sh",
        "**/shared/hooks/**/*.ts",
        "**/shared/commands/**/*.md",
        "**/setup/**/*.md",
        "**/setup/**/*.sh",
        "CLAUDE.md",
        "SETUP_CONFIG.json",
        "README.md"
      ],
      "keywords": [
        "agent",
        "skill",
        "guideline",
        "orchestrator",
        "setup",
        "cross-repo",
        "template",
        "symlink"
      ],
      "promptTriggers": {
        "keywords": [
          "setup orchestrator",
          "configure orchestrator",
          "orchestrator structure",
          "shared resources",
          "symlink"
        ],
        "intentPatterns": [
          "how.*orchestrator.*work",
          "setup.*orchestrator",
          "configure.*repos",
          "shared.*resources"
        ]
      }
    }
  }
}
